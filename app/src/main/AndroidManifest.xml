<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.weatherkok">
    <uses-permission android:name="android.permission.RECORD_AUDIO"/>
    <uses-permission android:name="android.permission.RECEIVE_SMS" />
    <uses-permission android:name="android.permission.SEND_SMS" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" /> <!-- 인터넷 권한 설정 -->
    <uses-permission android:name="android.permission.INTERNET" /> <!-- 인터넷 연결 확인 -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />


    <application
        android:name=".who.kakao.kotlin.KakaoApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.WeatherKok">

        <activity android:name=".datalist.DataListActivity"></activity>
        <activity android:name=".weather.WeatherActivity">

        </activity>

        <activity android:name=".main.schedule.ScheduleActivity"></activity>

        <activity android:name=".when.YearActivity"></activity>

        <activity android:name=".when.LoadingCalendarActivity"/>

        <activity android:name=".who.kakao.kotlin.WhoActivity">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <!-- "kakao{YOUR_NATIVE_APP_KEY}://kakaolink" 형식의 앱 실행 스킴을 설정하는데 사용 -->
                <data
                    android:host="kakaolink"
                    android:scheme="kakao{c205ec1957a41d51611ca6e373e3d815}" />
            </intent-filter>
        </activity>
        <activity android:name=".who.WhoActivity">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <!-- "kakao{YOUR_NATIVE_APP_KEY}://kakaolink" 형식의 앱 실행 스킴을 설정하는데 사용 -->
                <data
                    android:host="kakaolink"
                    android:scheme="kakao{c205ec1957a41d51611ca6e373e3d815}" />
            </intent-filter>
        </activity>
        <activity android:name=".when.WhenActivity" />
        <activity android:name=".weather.NowWxActivity"/>
        <activity android:name=".weather.WxNowListActivity"/>
        <activity android:name=".weather.WxListActivity">
        </activity>
        <activity android:name=".intro.IntroActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".where.WhereActivity">
        </activity>
        <activity android:name=".main.MainActivity"> //특정화면만 보고 싶을때 exported 넣어준다.
        </activity>
        <activity android:name=".when.CalendarActivity" android:exported="true">
        </activity>
    </application>


</manifest>