<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".when.CalendarActivity">

    <TextView
        android:id="@+id/tv_cal_dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:textSize="14dp"
        android:text="^" />

    <RelativeLayout
        android:id="@+id/rv_when_top_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_toLeftOf="@id/rv_when_top_bar"
            android:src="@drawable/car"
            android:id="@+id/iv_before"
            android:layout_width="50dp"
            android:layout_height="50dp"
            tools:ignore="NotSibling" />

        <TextView
            android:id="@+id/tv_year_month_top"
            android:layout_margin="10dp"
            android:textSize="30dp"
            android:text="@string/when_calendar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/iv_before"
            tools:ignore="NotSibling" />

        <TextView
            android:layout_toLeftOf="@id/tv_when_top_bar_year_term"
            android:layout_margin="10dp"
            android:textSize="30dp"
            android:text="월별"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_when_top_bar_year_term"
            android:layout_margin="10dp"
            android:textSize="30dp"
            android:text="연간"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/iv_after" />

        <ImageView
            android:id="@+id/iv_after"
            android:src="@drawable/car"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"/>

    </RelativeLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:gravity="fill"
            android:overScrollMode="never"
            android:id="@+id/rv_calendar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_cal_solar"
        android:background="@drawable/bg_gis_result_items_count"
        android:layout_margin="10dp"
        android:padding="10dp"
        android:text="양력"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_cal_luna"
        android:background="@drawable/bg_gis_result_items_count"
        android:layout_margin="10dp"
        android:padding="10dp"
        android:text="음력"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_calendar_selection_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:background="@drawable/bg_gis_result_items_count"
        android:padding="15dp"
        android:text="선택하기" />

</LinearLayout>