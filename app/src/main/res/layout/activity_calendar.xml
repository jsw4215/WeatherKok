<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#DFE9F6"
    tools:context=".when.CalendarActivity">

    <TextView
        android:id="@+id/tv_cal_dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:textSize="14dp"
        android:text="^" />

    <RelativeLayout
        android:id="@+id/rv_when_top_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_before"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_toLeftOf="@id/rv_when_top_bar"
            android:layout_margin="10dp"
            android:src="@drawable/ic_arrow_left_black_24dp"
            tools:ignore="NotSibling" />

        <TextView
            android:id="@+id/tv_year_month_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:layout_toRightOf="@id/iv_before"
            android:text="@string/when_calendar"
            android:textSize="30dp"
            android:fontFamily="@font/cafe24ohsquareair"
            tools:ignore="NotSibling" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:layout_toLeftOf="@id/tv_when_top_bar_year_term"
            android:fontFamily="@font/cafe24ohsquareair"
            android:text="월별"
            android:textSize="30dp" />

        <TextView
            android:id="@+id/tv_when_top_bar_year_term"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:layout_toLeftOf="@id/iv_after"
            android:text="연간"
            android:textSize="30dp"
            android:fontFamily="@font/cafe24ohsquareair"/>

        <ImageView
            android:id="@+id/iv_after"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_margin="10dp"
            android:src="@drawable/ic_arrow_right_black_24dp" />

    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_calendar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_weight="3"
        android:background="@drawable/bg_calendar"
        android:gravity="fill"
        android:overScrollMode="never" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <CheckBox
            android:id="@+id/cb_cal_luna"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="음력"
            android:fontFamily="@font/cafe24ohsquareair"/>
        <CheckBox
            android:id="@+id/cb_cal_solar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="일정"
            android:fontFamily="@font/cafe24ohsquareair"/>

<!--    <TextView-->
<!--        android:id="@+id/tv_cal_solar"-->
<!--        android:layout_margin="10dp"-->
<!--        android:padding="10dp"-->
<!--        android:text="양력"-->
<!--        android:layout_width="wrap_content"-->
<!--        android:layout_height="wrap_content"/>-->
<!--        <TextView-->
<!--            android:id="@+id/tv_cal_luna"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:layout_margin="10dp"-->
<!--            android:padding="10dp"-->
<!--            android:text="일정" />-->


    </LinearLayout>

    <TextView
        android:id="@+id/tv_calendar_selection_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:background="@drawable/bg_btn_start"
        android:padding="10dp"
        android:textColor="#FFFFFF"
        android:text="선택하기"
        android:textSize="20dp"
        android:fontFamily="@font/cafe24ohsquare"
        android:gravity="center"/>

</LinearLayout>