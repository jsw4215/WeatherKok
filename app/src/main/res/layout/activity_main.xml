<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_register_total"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".main.MainActivity">

    <LinearLayout
        android:id="@+id/ll_main_what_is_the_app"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:textSize="30sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/what_is_this_app" />

        <ImageView
            android:src="@drawable/question_mark"
            android:layout_width="50dp"
            android:layout_height="50dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_main_where"
        android:layout_margin="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_marginRight="20dp"
            android:src="@drawable/car"
            android:layout_width="100dp"
            android:layout_height="100dp" />

        <TextView
            android:id="@+id/tv_main_where"
            android:layout_gravity="center_vertical"
            android:textSize="30sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/where_to_go" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_main_when"
        android:layout_margin="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_marginRight="20dp"
            android:src="@drawable/calendar"
            android:layout_width="100dp"
            android:layout_height="100dp" />

        <TextView
            android:layout_gravity="center_vertical"
            android:textSize="30sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/when_to_go" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_main_who"
        android:layout_margin="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_marginRight="20dp"
            android:src="@drawable/person"
            android:layout_width="100dp"
            android:layout_height="100dp" />

        <TextView
            android:layout_gravity="center_vertical"
            android:textSize="30sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/who_go_with" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_main_start"
        android:gravity="bottom"
        android:background="@drawable/bg_gis_result_items_count"
        android:textSize="30sp"
        android:layout_gravity="end"
        android:text="@string/start_the_app"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</LinearLayout>