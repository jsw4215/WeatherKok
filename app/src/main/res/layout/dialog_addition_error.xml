<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/ll_top_dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_back_arrow"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="5dp"
            android:padding="5dp"
            android:src="@drawable/ic_close_black_24dp" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_error_msg1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_top_dialog"
        android:fontFamily="@font/cafe24ohsquareair"
        android:layout_marginStart="10dp"
        android:maxLines="1"
        android:padding="10dp"
        android:text="@string/addition_error_title"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/tv_error_msg2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_below="@+id/tv_error_msg1"
        android:fontFamily="@font/cafe24ohsquareair"
        android:maxLines="2"
        android:padding="30dp"
        android:text="@string/addition_error_contents"
        android:textSize="20dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_error_msg2"
        android:gravity="end">

        <ImageView
            android:id="@+id/iv_sorry_cat"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="end"
            android:padding="10dp"
            android:src="@drawable/sorry_cat" />

    </LinearLayout>

</RelativeLayout>