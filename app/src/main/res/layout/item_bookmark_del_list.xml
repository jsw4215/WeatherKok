<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/transparent"
    android:orientation="horizontal">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@color/transparent"
        android:orientation="horizontal">


        <RadioButton
            android:id="@+id/rb_item_list"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/tv_bm_weather_location_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:autoSizeTextType="uniform"
            android:ellipsize="end"
            android:fontFamily="@font/imcresoojin"
            android:gravity="center"
            android:maxLines="2"
            android:text="@string/location_list1"
            android:textAlignment="center"></TextView>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="10dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_bm_weather_am_list"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_marginRight="30dp"
                    android:src="@drawable/ic_sun"></ImageView>

                <ImageView
                    android:id="@+id/iv_bm_weather_pm_list"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_cloudy"></ImageView>
            </LinearLayout>

            <TextView
                android:id="@+id/tv_bm_list_no_wx"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:fontFamily="@font/imcresoojin"
                android:gravity="center"
                android:paddingEnd="10dp"
                android:text="날씨없음"
                android:textSize="20dp" />

        </FrameLayout>

        <TextView
            android:id="@+id/tv_now_weather_degrees"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:paddingEnd="10dp"
            android:autoSizeTextType="uniform"
            android:ellipsize="end"
            android:fontFamily="@font/imcresoojin"
            android:gravity="center"
            android:maxLines="2"
            android:text="@string/degrees"
            android:textAlignment="center"></TextView>


    </LinearLayout>

</LinearLayout>